@import url("https://fonts.googleapis.com/css2?family=Josefin+Slab:wght@600&display=swap");

@media screen and (min-width: 551px) {
  img {
    /* width: 100vh; */
    max-width: 60%;
    border-radius: 2%;
    margin: 2px;
  }
}

@media screen and (max-width: 550px) {
  img {
    /* width: 100vh; */
    max-width: 100%;
    border-radius: 2%;
    margin: 2px;
  }
}

.container {
  display: flex; /* or inline-flex */
  flex-flow: column wrap;
  justify-content: space-evenly;
}

.row {
  border: 0px solid rgb(181, 188, 201);
  margin: 0px;
}

.signinline {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  /* flex-grow: 1; */
}

.laForm {
  width: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 2px solid burlywood;
  border-radius: 2%;
  /* padding: 10px; */
}

input[type="text"] {
  /* width: 80%; */
  padding: 6px 6px;
  margin: 4px 0;
  box-sizing: border-box;
  outline-width: 0;
  color: rgb(106, 106, 110);
  font-family: "Josefin Slab", serif;
}

input[type="password"] {
  /* width: 80%; */
  padding: 6px 6px;
  margin: 4px 0;
  box-sizing: border-box;
  color: rgb(106, 106, 110);
  font-family: "Josefin Slab", serif;
}

input[type="password"]:focus {
  border: 4px solid #787987;
  border-radius: 4px;
  outline-width: 0;
}
input[type="text"]:focus {
  border: 4px solid #787987;
  border-radius: 4px;
  outline-width: 0;
}

